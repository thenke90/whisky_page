<%include partials/header %>
<div class="container">
	<header class="jumbotron">
		<h1 style="text-align:center">The whisky database</h1>
		<p style="text-align:center">
                   <a class="text-center btn btn-primary btn-lg" href="/collection">Go to collection</a>    
               </p>
	</header>
	
	<div class="row ">
			<div style="margin:25px auto; width:30%">
				<form action="/collection" method="POST" autocomplete="on" enctype="multipart/form-data">	
					<div class="form-group">
						<label for="Date">Date</label>		
						<input class="form-control" type="date" name="date">
					</div>
					<div class="form-group">
						<label for="distillery">Distillery</label>
						<input class="form-control" type="text" name="distillery" >
					</div>
					<div class="form-group">
						<label for="age">Age</label>	
						<input class="form-control" type="text" name="age">
					</div>
					<div class="form-group">
						<label for="name">Name</label>
						<input class="form-control" type="text" name="name">
					</div>
					<div class="form-group">
						<label for="cask">Cask</label>
						<input class="form-control" type="text" name="cask">
					</div>
					<div class="form-group">
						<label for="region">Region</label>	
						<input class="form-control" type="text" name="region">
					</div>
					<div class="form-group">	
						<label for="taste">Taste</label>
						<input class="form-control" type="Range" min="0" max="100" name="taste" value="0" step="1" oninput="outputUpdate(value)">
						<output for="taste" id="tastePoints">0</output>
					</div>
					<div class="form-group">
						<label for="image">Image</label>
						<input class="form-control" type="text" name="image" placeholder="enter image url">
						
					</div>
					<div class="form-group">
						<label for="comment">Comment</label>
						<input class="form-control comment" type="text" name="comment" placeholder="Any comments?">
					</div>
          			
          			<div class="custom-file mb-3">
            			<input type="file" name="file" id="file" class="custom-file-input">
            			<label for="file" class="custom-file-label">Choose File</label>
          			</div>
          				
					<input type="submit" value="Submit" class="btn btn-primary btn-block">

		        </form>
			</div>
	</div>
</div>

<%include partials/footer%>
